<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/allDiscoveryList_IV"
        android:scaleType="centerCrop"
        android:background="@drawable/shape_imag_yuanjiao"
        android:src="@mipmap/ig_holder_image_large" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44555555">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大标题"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:id="@+id/allDiscoveryList_title"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小标题"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/allDiscoveryList_title"
            android:id="@+id/allDiscoveryList_subtitle"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


</FrameLayout>
