<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.maimenghuo.NewsActivity">
    <LinearLayout
        android:id="@+id/headLayout"
        android:orientation="horizontal"
        android:background="#f00"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:onClick="onClick"
            android:clickable="true"
            android:id="@+id/btn_news_back"
            android:src="@mipmap/ic_action_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="25dp"
            android:text="商品详情"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/btn_news_share"
            android:src="@mipmap/ic_action_compact_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/headLayout"-->
        <!--android:layout_above="@+id/footLayout"-->
        <!--&gt;-->
        <ScrollView
            android:layout_below="@id/headLayout"
            android:layout_above="@+id/footLayout"
            android:id="@+id/goodsDetail_SV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/goodsDetail_VP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v4.view.ViewPager>
                    <LinearLayout
                        android:id="@+id/goodsDetail_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_alignBottom="@id/goodsDetail_VP">

                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/goodsDetail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="标题"/>
                <TextView
                    android:id="@+id/goodsDetail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="价格"/>
                <TextView
                    android:id="@+id/goodsDetail_maioshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:text="描述"/>

                <LinearLayout
                    android:id="@+id/goodsDetail_dong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:background="@android:color/white">
                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/goodsDetail_jieshao"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@drawable/text_red_selector"
                        android:text="图文介绍"/>
                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/goodsDetail_pinglun"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@drawable/text_red_selector"
                        android:text="评论"/>
                </LinearLayout>
                <WebView
                    android:id="@+id/web_news"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </WebView>
            </LinearLayout>

        </ScrollView>
    <LinearLayout
        android:layout_below="@id/headLayout"
        android:id="@+id/goodsDetail_jing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:background="#ffffffff">
    </LinearLayout>
    <!--</FrameLayout>-->


    <LinearLayout
        android:id="@+id/footLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:onClick="onClick"
            android:clickable="true"
            android:id="@+id/tv_news_like"
            android:drawableLeft="@mipmap/icon_favorite_selected"
            android:layout_marginLeft="10dp"
            android:text="  喜欢"
            android:textColor="#f00"
            android:gravity="center"
          android:background="@drawable/button_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>
        <TextView
            android:onClick="onClick"
            android:clickable="true"
            android:id="@+id/tv_news_buy"
            android:layout_marginLeft="20dp"
            android:text="   去淘宝购买"
            android:textSize="15sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/button_style1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>
    </LinearLayout>

</RelativeLayout>
